default_platform(:android)

platform :android do
  desc "Pipeline: Promote old Internal to Beta -> Build New -> Upload New to Internal"
  lane :deploy do

    # --- STEP 1: Promote the EXISTING build to Open Testing ---
    begin
      upload_to_play_store(
        package_name: 'com.tashila.hazle',
        track: 'internal',
        track_promote_to: 'beta',
        json_key: ENV["GOOGLE_APPLICATION_CREDENTIALS"],
        skip_upload_metadata: true,
        skip_upload_images: true,
        skip_upload_screenshots: true,
        skip_upload_changelogs: true
      )
      puts "âœ… Successfully promoted the old Internal build to Beta!"
    rescue => ex
      # Check if the error is just because the build is already there or track is empty
      if ex.message.include?("already in track") || ex.message.include?("no release")
        puts "â„¹ï¸ Promotion skipped: The build is either already in Beta or Internal track is empty."
      else
        puts "âš ï¸ Promotion failed with error: #{ex.message}"
      end
    end

    # --- STEP 2: Build the NEW version ---
    gradle(
      task: "bundle",
      build_type: "Release",
      properties: {
        "android.injected.signing.store.file"     => "#{ENV['GITHUB_WORKSPACE']}/app/keystore.jks",
        "android.injected.signing.store.password" => ENV["KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias"      => ENV["KEY_ALIAS"],
        "android.injected.signing.key.password"   => ENV["KEY_PASSWORD"]
      }
    )

    # --- STEP 3: Upload the NEW version to Internal ---
    upload_to_play_store(
      package_name: 'com.tashila.hazle',
      track: 'internal',
      json_key: ENV["GOOGLE_APPLICATION_CREDENTIALS"],
      aab: 'app/build/outputs/bundle/release/app-release.aab',
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true,
      skip_upload_changelogs: true
    )
    puts "ðŸš€ New build successfully uploaded to Internal track!"
  end
end