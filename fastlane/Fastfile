default_platform(:android)

platform :android do
  desc "Build AAB and deploy to Play Store Internal Track"
  lane :deploy do
    # 1. Build the signed App Bundle (AAB)
    # This uses the 'app/keystore.jks' we decode in the GH Action
    gradle(
      task: "bundle",
      build_type: "Release",
      properties: {
        "android.injected.signing.store.file"     => "#{ENV['GITHUB_WORKSPACE']}/app/keystore.jks",
        "android.injected.signing.store.password" => ENV["KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias"      => ENV["KEY_ALIAS"],
        "android.injected.signing.key.password"   => ENV["KEY_PASSWORD"]
      }
    )

    # 2. Upload to Google Play
    # Fastlane automatically finds the WIF token via the ENV variable
    upload_to_play_store(
      track: 'internal',
      aab: 'app/build/outputs/bundle/release/app-release.aab',
      ack_bundle_installation_warning: true,
      changes_not_sent_for_review: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end
end